{% extends "index.html.twig" %}

{% block body %}

<section id="hero" class="register d-flex align-items-end">
    <div class="carousel-item active">
        <div class="carousel-container">
            <h2 class="animate__animated animate__fadeInDown">{{ title }}</h2>
            <p class="animate__animated animate__fadeInUp">{{ subtitle }}</p>
        </div>
    </div>
</section>

<main id="main">
    <section class="main">
        <div class="container mt-4">
            {% if realties|length == 0 %}
                <div class="alert alert-warning" role="alert">{% trans %}Vous n'avez pas de location en cours !{% endtrans %}</div>
            {% else %}
                <table class="table table-striped">
                    <tbody>
                    {% for realty in realties %}
                        <tr>
                            <td>
                                <p>{{ ["","", "", "", "En attente de confirmation par le propriétaire", "Location confirmer !"][realty.statut] }}</p>
                                {% if realty.statut == 5 %}
                                    <a href="{{ path('owner.canceled', {idRent: realty.id}) }}" class="btn btn-primary">{% trans %}Déclarer un problème{% endtrans %}</a>
                                    <a href="{{ path('owner.accepted', {idRent: realty.id}) }}" class="btn btn-primary">{% trans %}Demander des travaux{% endtrans %}</a>
                                    <a href="{{ path('owner.accepted', {idRent: realty.id}) }}" class="btn btn-primary">{% trans %}Demander échelonner le loyer{% endtrans %}</a>
                                {% endif %}
                            </td>
                            <td>
                                <p>{{ realty.title }}</p>
                                <p>{{ realty.description }}</p>
                                <p>{{ realty.rent }}€ / {% trans %}Mois{% endtrans %}</p>
                            </td>
                            <td>
                                {% if is_granted('ROLE_LOCATAIRE') %}
                                    <a href="{{ path('tenant.contact', {idOwner: realty.id}) }}" class="btn btn-primary">{% trans %}Contacter le propriétaire{% endtrans %}</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </section>
</main>

{% endblock %}